<UserControl x:Class="RGU.DistributedSystems.Labs.WPF.View.UserControls.TextBoxKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RGU.DistributedSystems.Labs.WPF.View.UserControls"
             xmlns:viewModel="clr-namespace:RGU.DistributedSystems.Labs.WPF.View.UserControls.UserControlViewModel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0"
                 Padding="10"
                 FontSize="20">
        </TextBox>
        
        <local:LetterKeyboard Grid.Row="1" >
        </local:LetterKeyboard>
        
        
    </Grid>
</UserControl>
